 package practice1;
import java.util.Scanner;

public class SwitchCaseUsingRange {

    public static void main(String[] args) {

        Scanner scanner = new Scanner(System.in);

        double ct, ast, ca, finalMark;
        System.out.println("Enter your CT mark: ");
        ct = scanner.nextDouble();

        System.out.println("Enter your Assignment mark: ");
        ast = scanner.nextDouble();

        System.out.println("Enter your CA mark: ");
        ca = scanner.nextDouble();

        System.out.println("Enter your Final mark: ");
        finalMark = scanner.nextDouble();

        // Calculate the total mark
        double total = (ct ) + (ast ) + (ca ) + (finalMark);

        // Set the maximum possible score for the course
        double maxPossibleScore = 100.0;

        // Calculate the percentage
        double percentage = (total / maxPossibleScore) * 100.0;

        System.out.println("Total Mark: " + total);
        System.out.println("Percentage: " + percentage + "%");

        scanner.close();
    }
}
